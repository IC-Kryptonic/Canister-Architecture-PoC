@startuml
Frontend -> VideoBackend: createVideo(videoInfo)
VideoBackend ->> VideoCanister: createVideo(videoInfo)
Frontend <-- VideoBackend: createVideo: videoInfo

loop chunkNum times
    Frontend ->> VideoCanister: insertChunk(chunk)
end

Frontend -> TokenManager: createToken(tokenInfo)
TokenManager ->> Token: createToken(tokenInfo)
TokenManager ->> VideoCanister: setOwner(principal)
TokenManager --> Frontend: createToken: tokenInfo

@enduml
